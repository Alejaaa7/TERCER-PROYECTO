{
  "name": "tacticboard-pro",
  "version": "1.0.0",
  "description": "Análisis táctico profesional de fútbol con grafos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": ["futbol", "tacticas", "grafos", "electron"],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tacticboard.pro",
    "productName": "TacticBoard Pro",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/ui/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/ui/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "src/assets/ui/logo.png"
    }
  }
}